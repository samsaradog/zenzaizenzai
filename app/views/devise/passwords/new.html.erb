<%= render :partial => "devise/shared/header", :locals => {:message => "Forgot your password?"} %>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <%= render :partial => "devise/shared/email", :locals => {:f => f} %>

  <%= render :partial => "devise/shared/submit", :locals => {:f => f, :message => "Send me reset password instructions"} %>
<% end %>

<%= render "devise/shared/links" %>
